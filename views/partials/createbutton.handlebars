<div id="modal-backdrop" class="hidden"></div>
  <div id="create-chat-modal" class="hidden">
    <div class="modal-dialog">

      <div class="modal-header">
        <h3>Create a Chatroom</h3>
        <button type="button" class="modal-close-button">&times;</button>
      </div>

      <div class="modal-body">
        <div class="chat-input-element">
          <label for="chat-text-input">Chat Name</label>
          <textarea id="chat-text-input"></textarea>
        </div>
        <div class="chat-input-element">
          <label for="chat-attribution-input">Other User</label>
          <input type="text" id="chat-attribution-input">
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="modal-cancel-button">Cancel</button>
        <button type="button" class="modal-accept-button">Create chatroom</button>
      </div>

    </div>
  </div>
</div>
